{
  "dashboard": {
    "id": null,
    "uid": "falco-security",
    "title": "Falco Runtime Security Dashboard",
    "tags": ["security", "falco", "kubernetes", "ebpf"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "type": "stat",
        "title": "Total Security Events (Last Hour)",
        "targets": [
          {
            "expr": "sum(increase(falco_events[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "type": "stat",
        "title": "Critical Events",
        "targets": [
          {
            "expr": "sum(rate(falco_events{priority=\"Critical\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "type": "stat",
        "title": "Warning Events",
        "targets": [
          {
            "expr": "sum(rate(falco_events{priority=\"Warning\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "type": "timeseries",
        "title": "Security Events Over Time",
        "targets": [
          {
            "expr": "sum by (priority) (rate(falco_events[1m]))",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "type": "piechart",
        "title": "Events by Priority",
        "targets": [
          {
            "expr": "sum by (priority) (increase(falco_events[1h]))",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 18},
        "type": "table",
        "title": "Top 10 Security Rules Triggered",
        "targets": [
          {
            "expr": "topk(10, sum by (rule) (increase(falco_events[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "rule": "Rule Name",
                "Value": "Event Count"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 30},
        "type": "table",
        "title": "Most Affected Pods",
        "targets": [
          {
            "expr": "topk(10, sum by (k8s_pod_name, k8s_ns_name) (increase(falco_events[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "k8s_pod_name": "Pod Name",
                "k8s_ns_name": "Namespace",
                "Value": "Event Count"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 30},
        "type": "timeseries",
        "title": "Event Rate (events/minute)",
        "targets": [
          {
            "expr": "rate(falco_events[1m]) * 60",
            "legendFormat": "{{rule}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 42},
        "type": "timeseries",
        "title": "Events by Rule Type",
        "targets": [
          {
            "expr": "sum by (rule) (rate(falco_events[5m]))",
            "legendFormat": "{{rule}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "stacking": {"mode": "normal"}
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  },
  "overwrite": true
}